<robot name="foosball_table">

  <material name="red">
    <color rgba="0.6 0.1 0.1 1.0" />
  </material>
	<!-- * * * Link Definitions * * * -->

	<link name="ball">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<sphere radius=".02" />
			</geometry>
            <material name="red" />
		</visual>
    <collision>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
			<geometry>
				<sphere radius=".02" />
			</geometry>
    </collision>
	</link>
</robot>